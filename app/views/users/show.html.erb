<div class="offset-1">
  <% if (user_signed_in?) && (@user.id == current_user.id) %>
    <h2>マイページ</h2>
  <% else %>
    <h2><%= @user.name %>さんのページ</h2>
  <% end %>
</div>

<%= render "posts/new_link" %>

<div class="row">
  <%= render 'users/user', user: @user %>

  <div class="offset-1 col-lg-6">
    <!--自分のレビュー一覧-->
    <% if (user_signed_in?) && (@user.id == current_user.id) %>
      <h4>マイレビュー</h4>
    <% else %>
      <h4><%= @user.name %>さんのレビュー</h4>(全<%= @user.posts.count %>件)
    <% end %>


    <div class="row">
      <% if @posts.empty? %>
        <p>まだレビューの投稿がありません</p>
      <% else %>
        <% @posts.each do |post| %>
          <%= render 'posts/post', post: post %>
        <% end %>
      <% end %>
      <div class="offset-1 col-10"><%= paginate @posts %></div>
    </div>
  </div>
</div>

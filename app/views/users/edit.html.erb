<div class="offset-2 col-8">
  <h2 class="text-center">プロフィール編集</h2>

  <div id="error_explanation">
    <% if @user.errors.any? %>
      <h4>プロフィール更新に失敗しました</h4>
      <% @user.errors.full_messages.each do |message| %>
        <ul>
          <li><%= message %></li>
        </ul>
      <% end %>
    <% end %>
  </div>

  <%= form_with model: @user, local: true do |f| %>
    <div class="form-group">
      <%= f.label :profile_image, "プロフィール画像" %><br />
      <%= attachment_image_tag @user, :profile_image, fallback: "icon_gray.png", id: "pro_img_prev", size: "100x100" %><br />
      <%= f.attachment_field :profile_image, class: "mt-2" %>
    </div>

    <div class="form-group">
      <%= f.label :name, "ニックネーム" %>
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :profile, "プロフィール" %>
      <%= f.text_area :profile, placeholder: "自己紹介を入力", class: "form-control" %>
    </div>

    <div class="form-group text-center">
      <%= f.submit '更新', class: "btn btn-outline-success" %>
    </div>
  <% end %>

  <div class="text-center">
    <%= link_to "マイページに戻る", user_path(@user) %>
  </div>
</div>
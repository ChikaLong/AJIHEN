<p>コメント全<%= post.comments.count %>件</p>
<table class="table">
  <% post.comments.each do |comment| %>
    <tr>
      <th>
        <%= link_to user_path(comment.user), class: "link" do %>
          <%= attachment_image_tag comment.user, :profile_image, :fill, 50, 50, fallback: "icon_gray.png", size: "50x50" %>
          <%= comment.user.name %>
        <% end %>
      </th>
      <td>
        <%= comment.comment %>
      </td>
      <td>
        <%= comment.created_at.strftime('%Y/%m/%d') %>
        <% if comment.user == current_user %>
          <%= link_to "削除", post_comment_path(comment.post, comment), method: :delete, remote: true, "data-confirm" => "コメントを消しますか？" %>
        <% end %>
      </td>
    </tr>
  <% end %>
</table>

<% if user_signed_in? %>
  <%= form_with(model:[post, comment]) do |f| %>
    <div class="form-group">
      <%= f.text_area :comment, placeholder: "コメント", class: "form-control" %>
      <%= f.submit "コメント" %>
    </div>
  <% end %>
<% else %>
  <p><%= link_to "ログイン", new_user_session_path, class: "link" %>するとコメントできます</p>
<% end %>
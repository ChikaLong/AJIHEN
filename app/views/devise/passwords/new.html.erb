<h2>パスワード再設定</h2>

<%= form_with model: @user, url: user_password_path, class: 'registration-main', local: true do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group">
    <%= f.label :email, "Eメール" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label "※入力されたアドレスにパスワード再設定メールを送信します" %></p>
    <%= f.submit "送信", class: "btn btn-outline-secondary" %>
  </div>
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <p>まだ登録が済んでない方は<%= link_to "こちら", new_registration_path(resource_name) %><br /></p>
<% end %>

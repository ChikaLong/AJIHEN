<div class="offset-2 col-8">
  <h2 class="text-center">ログイン</h2>

  <%= form_with model: @user, url: user_session_path, local: true do |f| %>
    <div class="form-group">
      <%= f.label :email, "メールアドレス" %><br />
      <%= f.email_field :email, autofocus: true, placeholder: "sample@example.com", autocomplete: "email", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :password, "パスワード" %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="form-group text-center">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, "次回から自動的にログイン" %>
      </div>
    <% end %>

    <div class="form-group text-center">
      <%= f.submit "ログイン", class: "btn btn-outline-success" %>
    </div>
  <% end %>

  <div class="text-center">
    <%= render "devise/shared/links" %>
  </div>
</div>

<div class="offset-2 col-8">
  <%= form_with model: tag, local: true do |f| %>
    <div class="form-group">
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group text-center">
      <%= f.submit btn_text, class: "btn btn-outline-secondary" %>
    </div>
  <% end %>

  <h3>現在登録されているタグ</h3>
  <% tags.each do |tag| %>
    <%= tag.name %> |
  <% end %>
</div>
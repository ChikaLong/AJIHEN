<h5>今日の気になる！ランキング</h5>
<% today_ranks.each.with_index(1) do |post, i| %>
  <%= i %>位
  <%= link_to post_path(post.id) do%>
    <%= attachment_image_tag post, :image, :fill, 100, 100 %>
    <%= post.item_name %>
  <% end %>
  総合評価:<%= post.rate %>
<% end %>


<%= render 'searches/form' %>

<div class="offset-lg-1 mb-3"><%= render "posts/new_link" %></div>

<h2 class="offset-lg-1">みんなのレビュー</h2>

<div class="offset-lg-1">
  <%= link_to "新着順", posts_path(sort_create: "true"), class: "link" %> |
  <%= link_to "総合評価順", posts_path(sort_rate: "true"), class: "link" %> |
  <%= link_to "コメント多い順", posts_path(sort_comment: "true"), class: "link" %> |
  <%= link_to "気になる！順", posts_path(sort_favorite: "true"), class: "link" %>
</div>

<div class="row">
  <div class="offset-lg-1 col-lg-7">
    <div class="row">
      <% @posts.each do |post| %>
        <%= render 'posts/post', post: post %>
      <% end %>
      <div class="offset-1 col-10"><%= paginate @posts %></div>
    </div>
  </div>

  <div class="col-lg-3">
    <%= render 'posts/rank', week_ranks: @week_ranks, month_ranks: @month_ranks %>
  </div>
</div>
<%= link_to "タグ一覧", tags_path %>
<%= link_to "カテゴリ一覧", categories_path %>

<h2>レビュー一覧</h2>

<% if user_signed_in? %>
  <%= link_to '新規投稿', new_post_path %>
<% else %>
  <%= link_to '新規投稿', new_user_session_path %>
<% end %>

<%= link_to "新着順", posts_path(sort_create: "true") %> |
<%= link_to "評価順", posts_path(sort_rate: "true") %> |
<%= link_to "コメント多い順", posts_path(sort_comment: "true") %> |
<%= link_to "いいね多い順", posts_path(sort_favorite: "true") %>

<% @posts.each do |post| %>
  <%= link_to post_path(post.id) do%>
    <%= attachment_image_tag post, :image, :fill,200,200 %>
    <%= post.item_name %>
  <% end %>

  <div>
    <div id="star-rate-<%= post.id %>"></div>
    <script>
      $('#star-rate-<%= post.id %>').raty({
        size: 36,
        starOff: '<%= asset_path('star-off.png') %>',
        starOn: '<%= asset_path('star-on.png') %>',
        starHalf: '<%= asset_path('star-half.png') %>',
        readOnly: true,
        half: true,
        score: <%= post.rate %>,
      });
    </script>
    <%= post.rate %>
  </div>

  <%= post.user.name %>
  <p>コメント数：<%= post.comments.count %></p>
  <p>いいね数：<%= post.favorites.count %></p>
<% end %>

<%= paginate @posts %>


<%= render 'posts/rank', today_ranks: @today_ranks, week_ranks: @week_ranks, month_ranks: @month_ranks %>